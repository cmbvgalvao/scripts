#!/bin/bash
#
# createScript--Given a name, creates a template for a new script, 
# gives it 755 permissions and opens the file in vim
# Can receive a path as argument otherwise creates the file in the current directory.


path="$1"

if [ "$path" = "" ] ; then
  path="$(pwd)"
fi

createScript(){
  touch "$1/$2"
  chmod 755 "$1/$2"
  echo "#!/bin/bash" >> "$1/$2"
  vim "$1/$2"
}

printf "Enter script name: "
read input
if [ -e "$path/$input" ] ; then
  echo "File already exists."
  exit 1
else 
  createScript "$path" "$input"
fi
